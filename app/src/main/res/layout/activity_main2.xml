<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D21A2525"
    android:id="@+id/relativeLayout"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        app:srcCompat="@drawable/c1map" />

    <ImageView
        android:id="@+id/pathDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/c1map" />


    <LinearLayout
        android:layout_width="119dp"
        android:layout_height="224dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="-14dp"
        android:layout_marginBottom="1dp"
        android:layout_toStartOf="@+id/imageView"
        android:background="#D24B7070"
        android:orientation="vertical"
        android:padding="3dp">


        <Button
            android:id="@+id/ShowButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/butt"
            android:onClick="ShowButton"
            android:text="Show"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/CurrText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ShowButton"

            android:background="@color/blue"
            android:includeFontPadding="true"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="2.5dp"
            android:paddingBottom="2.5dp"
            android:text="Current"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/NextText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:includeFontPadding="true"
            android:paddingStart="10dp"
            android:paddingTop="2.5dp"
            android:paddingEnd="2.5dp"
            android:paddingBottom="5dp"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/GoBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="GoBackButton"
            android:text="Return"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"

            />
    </LinearLayout>


</RelativeLayout>
